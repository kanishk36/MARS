<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/lblSrNo"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="S.No."/>

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView android:id="@+id/lblCName"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Name of CLTC Member"/>

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView android:id="@+id/lblUName"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Name of ULBs"/>

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView android:id="@+id/lblDesignation"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Designation"/>

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView android:id="@+id/lblLocation"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Location"/>

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView android:id="@+id/lblDate"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Date"/>

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView android:id="@+id/lblTime"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Time"/>

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView android:id="@+id/lblComment"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Attendance approved by ULBs With Remarks"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/black"/>

</LinearLayout>